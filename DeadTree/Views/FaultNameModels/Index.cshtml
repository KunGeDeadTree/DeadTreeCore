@model IEnumerable<DeadTree.Models.DBClass.FaultNameModel>

@{
    ViewData["Title"] = "Index";
}

<div class="jumbotron" style="background-color:cadetblue">
    <h2 style="color:white">@ViewData["Title"]</h2>
    <p class="lead">
        <a class="btn btn-warning" asp-action="Create">Create New</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-xs btn-success" asp-action="Edit" asp-route-id="@item.FNId">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    <a class="btn btn-xs btn-info" asp-action="Tree" asp-controller="Home" asp-route-id="@item.FNId">查看该问题图谱</a>
                </td>
            </tr>
        }
    </tbody>
</table>
