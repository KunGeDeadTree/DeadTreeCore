@model DeadTree.Models.DBClass.FeaturesMappingModel

@{
    ViewData["Title"] = "CreateInQuestion";
}

<h2>CreateInQuestion</h2>

<h4>FeaturesMappingModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateInQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QId" />
            <div class="form-group">
                <label asp-for="FFId" class="control-label"></label>
                <select asp-for="FFId" class="form-control" asp-items="ViewBag.FFId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CId" class="control-label"></label>
                <select asp-for="CId" class="form-control" asp-items="ViewBag.CId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
